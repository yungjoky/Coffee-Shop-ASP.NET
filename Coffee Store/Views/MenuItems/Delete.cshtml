@model Coffee_Store.Models.MenuItem

@{
    ViewData["Title"] = "Delete Menu Item";
}

<style>
    .delete-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: #fff8f3;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .header-section {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid rgba(192, 160, 128, 0.2);
    }

    .page-title {
        color: #2c1810;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .warning-text {
        color: #dc3545;
        font-size: 1.2rem;
        margin: 1rem 0;
    }

    .admin-info {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        margin: 1rem 0;
        border-left: 4px solid #c0a080;
    }

        .admin-info p {
            margin: 0.5rem 0;
            color: #666;
        }

        .admin-info strong {
            color: #2c1810;
        }

    .item-details {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        margin: 2rem 0;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .item-image {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin: 0 auto 2rem;
        display: block;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .detail-row {
        display: flex;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        width: 150px;
        font-weight: 600;
        color: #2c1810;
    }

    .detail-value {
        flex: 1;
        color: #666;
    }

    .buttons-container {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.8rem 1.8rem;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }
</style>

<div class="delete-container">
    <div class="header-section">
        <h1 class="page-title">Delete Menu Item</h1>
        <h3 class="warning-text">Are you sure you want to delete this item?</h3>
    </div>

    <div class="admin-info">
        <p><strong>Current Date and Time (UTC):</strong> @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss")</p>
        <p><strong>Administrator:</strong> @ViewBag.CurrentUser</p>
    </div>

    <div class="item-details">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="@Model.Name" class="item-image"
                 onerror="this.src='/images/default-menu-item.jpg'" />
        }

        <div class="detail-row">
            <div class="detail-label">Name</div>
            <div class="detail-value">@Model.Name</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Description</div>
            <div class="detail-value">@Model.Description</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Price</div>
            <div class="detail-value">$@Model.Price.ToString("F2")</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Category</div>
            <div class="detail-value">@Model.Category</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Created At</div>
            <div class="detail-value">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MenuItemId" />
        <div class="buttons-container">
            <a asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to Menu
            </a>
            <button type="submit" class="btn btn-delete"
                    onclick="return confirm('Are you sure you want to delete this item? This action cannot be undone.');">
                <i class="fas fa-trash"></i> Delete Item
            </button>
        </div>
    </form>
</div>