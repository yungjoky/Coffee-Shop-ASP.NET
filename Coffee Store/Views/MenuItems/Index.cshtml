        <a asp-action="Create"
           style="background-color: #c0a080; color: white; padding: 15px 25px;
                  border-radius: 25px; text-decoration: none; display: inline-block;
                  box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
            Add New Item
        </a>
        <a asp-action="DetailsList"
           style="background-color: #c0a080; color: white; padding: 15px 25px;
                  border-radius: 25px; text-decoration: none; display: inline-block;
                  box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
