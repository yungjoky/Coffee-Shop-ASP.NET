@model Coffee_Store.Models.MenuItem

<style>
    .edit-container {
        padding: 40px 20px;
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff8f3;
    }

    .edit-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .edit-header h1 {
            color: #2c1810;
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

    .current-image {
        text-align: center;
        margin-bottom: 30px;
    }

        .current-image img {
            max-width: 200px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .create-container {
        padding: 40px 20px;
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff8f3;
    }

    .create-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .create-header h1 {
            color: #2c1810;
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        color: #2c1810;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 2px solid #e1d5c9;
        border-radius: 12px;
        background-color: #fff;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #c0a080;
            box-shadow: 0 0 0 4px rgba(192, 160, 128, 0.1);
        }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    .btn-submit {
        background-color: #c0a080;
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #ad8e6e;
            transform: translateY(-2px);
        }

    .btn-back {
        background-color: transparent;
        color: #2c1810;
        padding: 12px 30px;
        border: 2px solid #c0a080;
        border-radius: 12px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-right: 15px;
    }

        .btn-back:hover {
            background-color: #c0a080;
            color: white;
        }

    .buttons-container {
        margin-top: 30px;
        text-align: center;
    }
</style>

<div class="edit-container">
    <div class="edit-header">
        <h1>Edit Menu Item</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <div class="current-image">
            <img src="@Model.Image" alt="@Model.Name" />
        </div>
    }

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MenuItemId" />
        <input type="hidden" asp-for="Image" />

        <div class="form-group">
            <label asp-for="Name" class="form-label">Item Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label">Price ($)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="form-label">Category</label>
            <select asp-for="Category" class="form-control">
                <option value="Hot Coffee">Hot Coffee</option>
                <option value="Cold Coffee">Cold Coffee</option>
                <option value="Tea">Tea</option>
                <option value="Pastries">Pastries</option>
                <option value="Snacks">Snacks</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">New Image (optional)</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        </div>

        <div class="buttons-container">
            <a asp-action="Index" class="btn-back">Back to Menu</a>
            <button type="submit" class="btn-submit">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}