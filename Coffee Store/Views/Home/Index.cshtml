@{
    ViewData["Title"] = "Brew Haven - Specialty Coffee Shop";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<style>
    .page-wrapper {
        width: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .content-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }
    .main-container {
        font-family: 'Poppins', sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .hero {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1495474472287-4d71bcdd2085');
        background-size: cover !important;
        background-position: center !important;
        height: 80vh;
        margin-top:-2vh;
        width:100%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 0 20px;
    }

    .hero-content {
        max-width: 800px;
    }

    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .hero p {
        font-size: 1.2rem;
        margin-bottom: 30px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }

    .cta-button {
        background-color: #c0a080;
        color: white;
        padding: 15px 30px;
        text-decoration: none;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s ease;
        display: inline-block;
    }

        .cta-button:hover {
            background-color: #a88c6a;
            transform: translateY(-2px);
        }

    .features {
        padding: 80px 20px;
        background-color: #fff;
        text-align: center;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-card {
        padding: 30px;
        background-color: #f9f5f0;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-10px);
        }

        .feature-card i {
            font-size: 2.5rem;
            color: #c0a080;
            margin-bottom: 20px;
        }

        .feature-card h3 {
            margin-bottom: 15px;
            color: #2c1810;
        }

    .hours {
        padding: 80px 20px;
        background-color: #2c1810;
        color: white;
        text-align: center;
    }

        .hours h2 {
            margin-bottom: 40px;
        }

    .hours-content {
        max-width: 600px;
        margin: 0 auto;
    }

    .hours p {
        margin: 10px 0;
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .hero h1

    {
        font-size: 2.5rem;
    }

    .features-grid {
        grid-template-columns: 1fr;
    }

    }
</style>


<div class="main-container">
    <!-- Hero Section -->
    <div class="hero">
        <div class="hero-content">
            <h1>Brew Haven</h1>
            <p>Where Every Cup Tells a Story</p>
            <a href="/MenuItems" class="cta-button">View Our Menu</a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features">
        <div class="features-grid">
            <div class="feature-card">
                <i class="fas fa-coffee"></i>
                <h3>Specialty Coffee</h3>
                <p>Hand-selected beans roasted to perfection</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-bread-slice"></i>
                <h3>Fresh Pastries</h3>
                <p>Baked daily in our artisan kitchen</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-wifi"></i>
                <h3>Cozy Atmosphere</h3>
                <p>Free WiFi and comfortable seating</p>
            </div>
        </div>
    </div>

    <!-- Hours Section -->
    <div class="hours">
        <h2>Opening Hours</h2>
        <div class="hours-content">
            <p>Monday - Friday: 7:00 AM - 8:00 PM</p>
            <p>Saturday: 8:00 AM - 9:00 PM</p>
            <p>Sunday: 9:00 AM - 6:00 PM</p>
        </div>
    </div>
</div>